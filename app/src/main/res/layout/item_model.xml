<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/rv_width"
    android:layout_height="@dimen/rv_height"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ivThumbnail"
        android:layout_width="@dimen/rv_image_dimension"
        android:layout_height="@dimen/rv_image_dimension"
        android:layout_gravity="center" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:ellipsize="end"
        android:gravity="center"
        android:textColor="@android:color/black"
        android:textSize="@dimen/rv_title_text_size"
        tools:text="TITLE" />

</LinearLayout>